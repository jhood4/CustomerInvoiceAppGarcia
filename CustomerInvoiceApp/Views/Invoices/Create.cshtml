@model CustomerInvoiceApp.Models.ViewModels.CreateInvoiceVM

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title mb-0">New Invoice</h4>
                </div>
                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div class="row m-0 p-0 g-3">
                            <div class="form-group">
                                <label for="CustomerId">Customer</label>
                                <select asp-for="Invoice.CustomerId"  class="form-control" asp-items="@Model.CustomerList"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Invoice.Amount"></label>
                                <input asp-for="@Model.Invoice.Amount" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

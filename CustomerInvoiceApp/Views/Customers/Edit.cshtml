@model Customer

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title mb-0">Edit Customer</h4>
                </div>
                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        <div class="row m-0 p-0 g-3">
                            <div class="form-group">
                                <label asp-for="@Model.FirstName"></label>
                                <input asp-for="@Model.FirstName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.LastName"></label>
                                <input asp-for="@Model.LastName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Country"></label>
                                <input asp-for="@Model.Country" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Email"></label>
                                <input asp-for="@Model.Email" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <input type="submit" class="btn btn-primary" value="Update" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
